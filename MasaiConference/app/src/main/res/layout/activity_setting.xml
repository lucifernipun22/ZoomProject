    <TextView
        android:visibility="gone"
        android:id="@+id/updatedMsg"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Your information saved successfully"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:src="@drawable/default_profile_image"
                        android:id="@+id/profile_img"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="1.2dp"
                        app:civ_border_overlay="true"
                        android:layout_marginTop="10dp"
                        />
                    <ImageView
                        android:padding="5dp"
                        android:id="@+id/editPhotoIcon"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginStart="146dp"
                        android:layout_marginTop="43dp"
                        android:src="@drawable/ic_edit_border"
                        android:visibility="visible" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/userProfileStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Available"
                        android:textStyle="normal"
                        android:layout_marginTop="2dp"
                        />
                    <ImageView
                        android:id="@+id/statusEdit"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_edit_border"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="normal"
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/user_display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Name"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="3dp"
                    android:backgroundTint="@color/gray"
                    android:inputType="textCapWords"
                    />


                <EditText
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint=" Email"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="3dp"
                    android:backgroundTint="@color/dark_gray"
                    />
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Phone"
                    android:drawableLeft="@drawable/ic_smartphone"
                    android:drawablePadding="3dp"
                    android:backgroundTint="@color/dark_gray"
                    />
                <RadioGroup
                    android:id="@+id/genderRG"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/maleRB"
                        android:onClick="selectedGenderRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        />
                    <RadioButton
                        android:onClick="selectedGenderRB"
                        android:id="@+id/femaleRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"/>
                </RadioGroup>




            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/saveInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_button_background"
        android:text="Save"
        android:textColor="@color/whiteColor"
        android:textStyle="bold"
        />
</LinearLayout>

